  <!-- emotions -->

  <module>
		<name>yarplogger</name>
		<parameters>--start</parameters>
    <node>ergocub001-lap</node>
  </module>

  <module>
		<name>yarprobotinterface</name>
		<parameters>--config ergocub_all.xml</parameters>
    <node>ergocub-torso</node>
  </module>

  <module>
		<name>yarpmotorgui</name>
		<parameters>--from custom_positions.ini</parameters>
    <node>ergocub001-lap</node>
  </module>

  <module>
		<name>yarprobotinterface</name>
		<parameters>--config realsense2.xml</parameters>
    <node>ergocub-head</node>
  </module>

  <module>
		<name>ergocubEmotions</name>
		<parameters>--context ergoCubEmotions --from config.ini</parameters>
    <node>ergocub-head</node>
  </module>

  <module>
		<name>/usr/local/src/robot/hsp/ergocub-bimanual/build/command_prompt</name>
		<parameters>/Components/Manipulation /usr/local/src/robot/hsp/ergocub-bimanual/config/ergocub_real.ini</parameters>
    <node>ergocub-torso</node>
  </module>

  <module>
		<name>/usr/local/src/robot/hsp/ergocub-bimanual/build/command_server</name>
		<parameters>/Components/Manipulation /ergocub /usr/local/src/robot/robotology-superbuild/src/ergocub-software/urdf/ergoCub/robots/ergoCubSN001/model.urdf /usr/local/src/robot/hsp/ergocub-bimanual/config/ergocub_real_wristless.ini</parameters>
    <node>ergocub-torso</node>
  </module>

  <module>
		<name>yarpview</name>
		<parameters>--name /viewer</parameters>
    <node>ergocub001-lap</node>
	</module>

  <module>
		<name>python</name>
		<parameters>/home/carmela/dev_iit/development/LLM4chatting/code/chatGUI.py</parameters>
	</module>

  <module>
		<name>python</name>
		<parameters>/home/carmela/dev_iit/development/LLM4chatting/code/FakeRobotNWS.py</parameters>
	</module>
  
  <module>
		<name>python</name>
		<parameters>/app/LLM4chatting/code/planner_GUI.py --config /app/LLM4chatting/code/configs/gpt_config_fc.json</parameters>
    <node>planner_node</node>
  </module>

  <module>
		<name>python</name>
		<parameters>/app/LLM4chatting/code/observer.py --config /app/LLM4chatting/code/configs/gpt_config_obs.json</parameters>
    <node>planner_node</node>
	</module>

  <module>
		<name>python</name>
		<parameters>/app/LLM4chatting/code/internal_robot_state.py --config /app/LLM4chatting/code/configs/gpt_config_intState.json</parameters>
    <node>planner_node</node>
	</module>

  <module>
    <name>yarprobotinterface</name>
    <parameters>--context speechPipeline --from micAudio.ini --mic_sound_on_stop 0 --mic_start 1 --mic_min_samples 4000 --mic_max_samples 4000</parameters>
    <node>ergocub-head</node>
  </module>
    
    
  <module>
    <name>sileroVAD</name>
    <parameters></parameters>
    <environment>YARP_LOG_PROCESS_LABEL=VAD</environment>
    <node>speech_docker</node>
  </module>
    
  <module>
    <name>yarprobotinterface</name>
    <parameters>--context vadModule --from audioPlayer.ini</parameters>
    <node>speech_docker</node>
  </module>
    
  
      <!-- speech synthesizer -->
    <module>
    <name>yarprobotinterface</name>
    <parameters>--context google --from googleSynthesizer.ini</parameters>
    <node>speech_docker</node>
    </module>
    
    
      <module>
    <name>yarprobotinterface</name>
    <parameters>--context google --from googleTranscription.ini</parameters>
    <node>speech_docker</node>
    </module>

